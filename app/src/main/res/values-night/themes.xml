<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Appetize" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_pink</item>
        <item name="colorOnSecondary">@color/primary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Toolbar colors. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Appetize.Auth" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_pink</item>
        <item name="colorOnSecondary">@color/primary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@drawable/background_welcome</item>
    </style>

    <style name="ActionTheme" parent="Theme.AppCompat">
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">@color/primary</item>
        <item name="itemIconTint">@drawable/bottom_nav_colors</item>
        <item name="itemTextColor">@drawable/bottom_nav_colors</item>
    </style>

    <style name="MyDarkToolbarStyle">
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyCheckBox">
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/primary_light</item>
    </style>

    <style name="OrangeSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="BlueSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue_accent</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="ButtonAccentStyle" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/button_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonWhiteStyle" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBarStyle" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateTint">@color/accent_light</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:padding">10dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:background">@drawable/button_accent</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabSelectedTextColor">@color/accent</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TextViewAccentStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="DialogSpinnerStyle">
        <item name="android:background">@drawable/background_off_white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="SpinnerStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>
</resources>